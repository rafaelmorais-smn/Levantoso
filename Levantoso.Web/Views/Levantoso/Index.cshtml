@{
    ViewBag.Title = "title";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<script src="~/scripts/jquery-3.7.1.js"></script>

<div id="container-tudo" class="container-sm">
    <div id="div-grid-tabela"></div>
    <div id="divs-botoes" class="row">
        <div id="div-botao-gerar" class="col">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalExemplo" 
                    onclick="levantoso.aberturaNovaTabela()">Criar Tabela</button>
        </div>
        <div id="div-buton" class="col">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalGrupo">Gerar Arquivo</button>
        </div>
    </div>
    <div class="form-group" id="div-file" style="padding: 20px;">
        <input type="file" class="form-control" id="dataFile" onchange="levantoso.importarArquivo()" name="file" />
    </div>
</div>

<div class="modal fade" id="modalExemplo" tabindex="-1" aria-labelledby="modalExemploLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalExemploLabel">Escolha o Nome da Tabela</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <label>Nome:</label>
                <input id="nomeGrupo" type="text"/>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" data-bs-dismiss="modal" onclick="levantoso.abrirGrupo()">Confirmar</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalGrupo" tabindex="-1" aria-labelledby="modalGrupo" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTables">Escolha o Nome do Arquivo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <label>Nome:</label>
                <input id="nomeArquivo" type="text" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="levantoso.lerDadosTabela()">Salvar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/levantoso.js?d=@DateTime.Now.Ticks"></script>
<link rel="stylesheet" href="~/lib/levantoso.css?d=@DateTime.Now.Ticks">
<script>
    levantoso.init({
        urls: {
            abrirGrupo: '@Url.Action("AbrirGrupo")',
            novaLinhaGrid: '@Url.Action("NovaLinhaGrid")',
            exportarParaExcel: '@Url.Action("ExportarParaExcel")',
            importandoArquivo: '@Url.Action("Upload")'
        }
    });

</script>
