@model dynamic

@{
    ViewBag.Title = "title";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<div id="container-tudo">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalExemplo">Abrir Modal</button>
    <div id="div-grid-tabela"></div>
    <div id="div-grid-form"></div>
</div>

<div class="modal fade" id="modalExemplo" tabindex="-1" aria-labelledby="modalExemploLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalExemploLabel">Escolha o Nome do Grupo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <label>Nome:</label>
                <input id="nomeGrupo" type="text"/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="levantoso.abrirFormulario($('#nomeGrupo').val())">Salvar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/scripts/jquery-3.7.1.js"></script>
<script src="~/scripts/levantoso.js?d=@DateTime.Now.Ticks"></script>
<link rel="stylesheet" href="~/style/levantoso.css">
<script>
    levantoso.init({
        urls: {
            abrirForm: '@Url.Action("AbrirForm")',
            gerarTabela: '@Url.Action("GerarTabela")'
        }
    });

</script>
