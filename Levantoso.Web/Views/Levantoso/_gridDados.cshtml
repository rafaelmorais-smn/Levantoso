@model dynamic
@{
    ViewBag.Title = "title";
    Layout = null;
}
<div id="container">
    <div id="grid-tabela">
        <h3>@ViewBag.NomeGrupo</h3>
        <table class="table table-striped" id="@ViewBag.NomeGrupo">
            <thead>
            <tr>
                <th scope="col">Item</th>
                <th scope="col">Complexidade</th>
                <th scope="col">Descrição</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
    <div id="grid-form">
        <form id="form-tabela">
            <div class="form-group" data-table="@ViewBag.NomeGrupo">
                <label>Item</label>
                <select class="form-control input item">
                    <option value="Selecione um Item" selected>Selecione um Item</option>
                    <option value="Tabela">Tabela</option>
                    <option value="Formulário">Formulário</option>
                    <option value="Procedure">Procedure</option>
                    <option value="JOB">JOB</option>
                    <option value="Trigger">Trigger</option>
                    <option value="Função">Função</option>
                    <option value="Script">Script</option>
                    <option value="Modelagem">Modelagem</option>
                    <option value="API">API</option>
                    <option value="Console">Console</option>
                    <option value="PDF">PDF</option>
                    <option value="Excel">Excel</option>
                </select>
            </div>
            <div class="form-group">
                <label>Complexidade</label>
                <select class="form-control input complexidade">
                    <option value="Selecione uma Complexidade" selected>Selecione uma Complexidade</option>
                    <option value="Simples">Simples</option>
                    <option value="Médio">Médio</option>
                    <option value="Complexo">Complexo</option>
                </select>
            </div>
            <div class="form-group">
                <label>Descrição</label>
                <textarea class="form-control input descricao" placeholder="Digite uma Descrição" rows="3"></textarea>
            </div>
            <button class="btn btn-primary" type="button" onclick="levantoso.adicionarDadosTabela(this);return false">
                Adicionar dados à tabela
            </button>
        </form>
    </div>
    <button class="btn btn-primary">Gerar Arquivo</button>
</div>  

<div id="armazenamento"></div>

<div class="modal fade" id="modalTable" tabindex="-1" aria-labelledby="modalTable" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTables">Escolha o Nome da Tabela</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <label>Nome:</label>
                <input id="nomeTabela" type="text" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="levantoso.abrirFormulario($('#nomeTabela').val())">Salvar</button>
            </div>
        </div>
    </div>
</div>